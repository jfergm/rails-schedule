<div>
  <h1 class="font-bold text-4xl">Location</h1>

  <div class="my-4 border rounded-md p-2 border-gray-300">
    <p class="text-2xl m-1">
      <label class="text-gray-500">Name:</label>&nbsp;
      <span class="font-bold"><%= @location.name %></span>
    </p>
    <p class="text-2xl m-1">
      <label class="text-gray-500">Address:</label>&nbsp;
      <span class="font-bold"><%= @location.address %></span>
    </p>
    <p class="text-2xl m-1">
      <label class="text-gray-500">Postal code:</label>&nbsp;
      <span class="font-bold"><%= @location.postal_code %></span>
    </p>
    <p class="text-2xl m-1">
      <label class="text-gray-500">City:</label>&nbsp;
      <span class="font-bold"><%= @location.city %></span>
    </p>
    <p class="text-2xl m-1">
      <label class="text-gray-500">State:</label>&nbsp;
      <span class="font-bold"><%= @location.state %></span>
    </p>
    <p class="text-2xl m-1">
      <label class="text-gray-500">Notes:</label>&nbsp;
      <span class="font-bold"><%= @location.notes %></span>
    </p>
