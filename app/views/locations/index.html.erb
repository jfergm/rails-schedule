<div class="w-full flex justify-between items-center">
  <h1 class="font-bold text-4xl">Locations</h1>
  <%= render partial: "shared/link", locals: { text: "Add", url: new_location_path } %>
</div>
<div class="my-5 border p-3 rounded-md border-gray-400">
  <table class="w-full text-left" id="locations-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Postal code</th>
        <th>City</th>
        <th>State</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr id="row-#{id}" class="">
          <td><%= location.id %></td>
          <td><%= location.name %></td>
          <td><%= location.address %></td>
          <td><%= location.postal_code %></td>
          <td><%= location.city %></td>
          <td><%= location.state %></td>
          <td>
            <div class="flex">
              <%= render partial: "shared/link", locals: { text: "Show", url: location_path(location), border: false } %>
              <%= render partial: "shared/link", locals: { text: "Edit", url: edit_location_path(location), border: false } %>
              <%= render partial: "shared/delete-button", locals: { text: "Delete", model: location, border: false}%>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
