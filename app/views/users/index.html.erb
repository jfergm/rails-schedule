<div class="w-full flex justify-between items-center">
  <h1 class="font-bold text-4xl">Users</h1>
  <%= render partial: "shared/link", locals: { text: "Add", url: new_user_path } %>
</div>
<div class="my-5 border p-3 rounded-md border-gray-400">
  <table class="w-full text-left" id="users-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr id="row-#{id}" class="">
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <div class="flex">
              <%= render partial: "shared/link", locals: { text: "Show", url: user_path(user), border: false } %>
              <%= render partial: "shared/link", locals: { text: "Edit", url: edit_user_path(user), border: false } %>
              <%= render partial: "shared/delete-button", locals: { text: "Delete", model: user, border: false}%>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
